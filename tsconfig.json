{
  "compilerOptions": {
    "composite": true,
    "target": "ES5",
    "lib": ["dom", "es6"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": true,
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./ts-build",
    "paths": {
      "shallow-equal": ["./src/@types/shallow-equal"]
    }
  },
  "include": ["src"],
  "exclude": ["test", "node_modules"]
}
